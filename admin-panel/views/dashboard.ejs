<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VPN Admin Panel - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .sidebar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: white;
        }
        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            margin: 2px 0;
        }
        .nav-link:hover, .nav-link.active {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .stat-card {
            background: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%);
            color: white;
        }
        .stat-card.success {
            background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
        }
        .stat-card.info {
            background: linear-gradient(135deg, #2196f3 0%, #03a9f4 100%);
        }
        .stat-card.warning {
            background: linear-gradient(135deg, #ff9800 0%, #ffc107 100%);
        }
        .status-badge {
            font-size: 0.8em;
            padding: 4px 8px;
        }
        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
        }
        @media (max-width: 768px) {
            .content-wrapper {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar position-fixed top-0 start-0" style="width: 250px; z-index: 1000;">
            <div class="p-3">
                <h4><i class="fas fa-shield-alt me-2"></i>VPN Admin</h4>
                <hr class="text-white">
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users">
                            <i class="fas fa-users me-2"></i>VPN Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/connections">
                            <i class="fas fa-link me-2"></i>Connections
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logs">
                            <i class="fas fa-file-alt me-2"></i>System Logs
                        </a>
                    </li>
                    <% if (user.role === 'admin') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/settings">
                            <i class="fas fa-cog me-2"></i>Settings
                        </a>
                    </li>
                    <% } %>
                </ul>
                
                <hr class="text-white">
                
                <div class="dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-2"></i><%= user.username %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a></li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <div class="content-wrapper">
            <div class="container-fluid">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col">
                        <h2>Dashboard</h2>
                        <p class="text-muted">VPN Server Management Overview</p>
                    </div>
                </div>
                
                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card stat-card info">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-2x mb-2"></i>
                                <h4><%= userCounts.total %></h4>
                                <p class="mb-0">Total Users</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card stat-card success">
                            <div class="card-body text-center">
                                <i class="fas fa-user-check fa-2x mb-2"></i>
                                <h4><%= userCounts.online %></h4>
                                <p class="mb-0">Online Users</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card stat-card warning">
                            <div class="card-body text-center">
                                <i class="fas fa-server fa-2x mb-2"></i>
                                <h4 id="cpu-usage"><%= systemStats ? Math.round(systemStats.cpu.usage) : 0 %>%</h4>
                                <p class="mb-0">CPU Usage</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card stat-card">
                            <div class="card-body text-center">
                                <i class="fas fa-memory fa-2x mb-2"></i>
                                <h4 id="ram-usage"><%= systemStats ? Math.round(systemStats.memory.usage) : 0 %>%</h4>
                                <p class="mb-0">RAM Usage</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- VPN Services Status -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-shield-alt me-2"></i>VPN Services Status</h5>
                            </div>
                            <div class="card-body">
                                <div id="vpn-status">
                                    <% for (const [service, status] of Object.entries(vpnStatus)) { %>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span><%= service %></span>
                                        <span class="badge <%= status ? 'bg-success' : 'bg-danger' %> status-badge">
                                            <%= status ? 'Running' : 'Stopped' %>
                                        </span>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-chart-line me-2"></i>System Resources</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="systemChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-download me-2"></i>Client Configuration Downloads</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3 mb-2">
                                        <a href="/config/openvpn" class="btn btn-outline-primary w-100">
                                            <i class="fas fa-download me-2"></i>OpenVPN Config
                                        </a>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <a href="/config/wireguard" class="btn btn-outline-success w-100">
                                            <i class="fas fa-download me-2"></i>WireGuard Config
                                        </a>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <button class="btn btn-outline-info w-100" onclick="showQR('wireguard')">
                                            <i class="fas fa-qrcode me-2"></i>WireGuard QR
                                        </button>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <button class="btn btn-outline-warning w-100" onclick="showQR('openvpn')">
                                            <i class="fas fa-qrcode me-2"></i>OpenVPN QR
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- System Information -->
                <% if (systemStats) { %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-info-circle me-2"></i>System Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>CPU Information</h6>
                                        <p><strong>Processor:</strong> <%= systemStats.cpu.brand %></p>
                                        <p><strong>Cores:</strong> <%= systemStats.cpu.cores %></p>
                                        <p><strong>Speed:</strong> <%= systemStats.cpu.speed %> GHz</p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Memory Information</h6>
                                        <p><strong>Total:</strong> <%= Math.round(systemStats.memory.total / 1024 / 1024 / 1024) %> GB</p>
                                        <p><strong>Used:</strong> <%= Math.round(systemStats.memory.used / 1024 / 1024 / 1024) %> GB</p>
                                        <p><strong>Free:</strong> <%= Math.round(systemStats.memory.free / 1024 / 1024 / 1024) %> GB</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- QR Code Modal -->
    <div class="modal fade" id="qrModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">QR Code Configuration</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <div id="qr-content"></div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        // WebSocket connection for real-time updates
        const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
        const ws = new WebSocket(`${protocol}//${window.location.host}`);
        
        ws.onmessage = function(event) {
            const data = JSON.parse(event.data);
            if (data.type === 'update') {
                updateDashboard(data);
            }
        };
        
        function updateDashboard(data) {
            if (data.stats) {
                document.getElementById('cpu-usage').textContent = Math.round(data.stats.cpu.usage) + '%';
                document.getElementById('ram-usage').textContent = Math.round(data.stats.memory.usage) + '%';
            }
        }
        
        // Chart.js setup
        const ctx = document.getElementById('systemChart').getContext('2d');
        const systemChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['CPU Usage', 'RAM Usage', 'Available'],
                datasets: [{
                    data: [
                        <%= systemStats ? Math.round(systemStats.cpu.usage) : 0 %>,
                        <%= systemStats ? Math.round(systemStats.memory.usage) : 0 %>,
                        100 - <%= systemStats ? Math.round((systemStats.cpu.usage + systemStats.memory.usage) / 2) : 0 %>
                    ],
                    backgroundColor: ['#ff6384', '#36a2eb', '#4bc0c0']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
        
        function showQR(protocol) {
            fetch(`/qr/${protocol}`)
                .then(response => response.json())
                .then(data => {
                    if (data.qrCode) {
                        document.getElementById('qr-content').innerHTML = `<img src="${data.qrCode}" class="img-fluid">`;
                        new bootstrap.Modal(document.getElementById('qrModal')).show();
                    } else {
                        alert('QR code not available');
                    }
                })
                .catch(error => {
                    alert('Error generating QR code');
                });
        }
    </script>
</body>
</html>
